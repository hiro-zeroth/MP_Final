<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAED"
    android:padding="16dp"
    tools:context=".AllowanceActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETUP ALLOWANCE ACTIVITY"
        android:textSize="24sp"
        android:textColor="#50A65C"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/amountInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter allowance amount"
        android:inputType="numberDecimal"
        android:textColorHint="#808080"
        android:textColor="#232323"
        android:backgroundTint="#C0C0C0"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/amountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AMOUNT FREQUENCY"
        android:textSize="15sp"
        android:textColor="#50A65C"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/frequencySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#50A65C"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/datePickerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT START DATE:"
        android:textColor="#50A65C"
        android:layout_marginBottom="8dp" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="#F8FAED"
        android:backgroundTint="#50A65C" />

</LinearLayout>
